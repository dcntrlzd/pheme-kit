{
  "name": "pheme-kit",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/bn.js": "^4.11.5",
    "@types/chai": "^4.1.7",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.14.4",
    "@types/uuid": "^3.4.3",
    "bn.js": "^4.11.8",
    "go-ipfs-dep": "^0.4.19",
    "ipfsd-ctl": "^0.40.0",
    "jest": "^24.7.1",
    "lerna": "^3.13.1",
    "prettier": "^2.0.5",
    "truffle": "^5.1.36",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2",
    "glob": "^7.1.3",
    "rimraf": "^2.6.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "yarn cleanup && yarn build-artifacts && jest && lerna run test",
    "tsc": "lerna exec tsc --",
    "build-artifacts": "lerna run build-artifacts",
    "build": "lerna run prepack --ignore e2e",
    "cleanup": "rimraf ./packages/*/lib ./packages/*/build ./packages/*/artifacts",
    "format:fix": "prettier --write '{packages,e2e}/**/*.{js,ts}'",
    "format:check": "prettier --check '{packages,e2e}/**/*.{js,ts}'",
    "lint:fix": "tslint -c tslint.json --fix -t verbose '{packages,e2e}/*/{src,test}/**/*.{js,ts}'",
    "lint:check": "tslint -c tslint.json -t verbose '{packages,e2e}/*/{src,test}/**/*.{js,ts}'",
    "prepare": "yarn format:fix && yarn lint:fix && yarn test"
  },
  "workspaces": [
    "packages/*",
    "e2e"
  ],
  "prettier": {
    "trailingComma": "es5",
    "bracketSpacing": true,
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 100,
    "singleQuote": true
  },
  "volta": {
    "node": "12.18.3",
    "yarn": "1.22.4"
  }
}
